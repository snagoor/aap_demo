global
    log /dev/log    local0
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

# Frontend Configuration
frontend http_in
    bind *:80
    mode http
    default_backend web_servers

# Backend Configuration (Web Nodes)
backend web_servers
    mode http
    balance roundrobin
    # Configure the web servers dynamically from the 'web_nodes' group
{% for host in groups['web_nodes'] %}
    # We assume 'ansible_host' is defined in your inventory for the web node IP.
    # If not, you may need to rely on the discovery of the IP, e.g., using 'ansible_default_ipv4.address'
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:80 check
{% endfor %}

# Optional: HAProxy Stats Page
listen stats
    bind *:8080
    stats enable
    stats uri /haproxy_stats
    stats realm Haproxy\ Statistics
    stats auth admin:password
